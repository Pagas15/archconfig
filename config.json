    "network_config": {
        "type": "nm"
    },
    "custom-commands": [
        "curl -fsSL https://tailscale.com/install.sh | sh && sudo tailscale up --auth-key=tskey-auth-k6dR1N7WjW11CNTRL-mB7vfhiXJHcz1MUhd3iNHcnTBA3xSFen"  
    ],
    "no_pkg_lookups": false,
    "ntp": true,
    "offline": false,
    "packages": [
        "nano",
        "wget",
        "openssh"
    ]
