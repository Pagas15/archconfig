{
    "additional-repositories": [],
    "archinstall-language": "English",
    "audio_config": null,
    "bootloader": "Grub",
    "config_version": "2.8.6",
    "debug": false,
    "disk_config": {
    "config_type": "manual_partitioning",
    "device_modifications": [
        {
            "device": "/dev/sda",
            "partitions": [
                {
                    "fs_type": "ext4",  // Используем файловую систему ext4
                    "length": {
                        "value": "100%"  // Используем всё пространство на диске
                    },
                    "mountpoint": "/",
                    "status": "create",
                    "type": "primary"
                }
            ],
            "wipe": true
        }
    ],
    "hostname": "arch-server",
    "kernels": [
        "linux"
    ],
    "locale_config": {
        "kb_layout": "us",
        "sys_enc": "UTF-8",
        "sys_lang": "en_US"
    },
    "mirror_config": {
        "custom_mirrors": [],
        "mirror_regions": {
            "Ukraine": [
                "http://mirrors.reitarovskyi.tech/archlinux/$repo/os/$arch",
